<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Dairy Management System</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/AppStyling.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/DairyManagementSystem.styles.css" asp-append-version="true" />
          <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" crossorigin="anonymous" />
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous" />
          <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastr@2.1.4/build/toastr.min.css" />
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
  
    </head>
    <body id="bodyH">
        <header id="headerH">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
                <div class="container-fluid">
                     <a id="vertical_toggle" name="vertical_toggle" class="btn-group text-black no-style" data-toggle="collapse" data-target="vertical-menu"><span class="bi bi-list "></span>&nbsp;&nbsp;DMS</a>
                </div>
            </nav>
        </header>
        <div class="vertical-menu p-0 collapse" id="vertical-menu">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <span class="navbar-toggler-icon list-item dmsi" style="display:inline-block;">
                        <span style="display:inline-block;position:absolute;">
                        <span class="bento-menu" >
                            <div class="bento-dot"></div>
                            <div class="bento-dot"></div>
                            <div class="bento-dot"></div>
                            <div class="bento-dot"></div>
                            <div class="bento-dot"></div>
                            <div class="bento-dot"></div>
                            <div class="bento-dot"></div>
                            <div class="bento-dot"></div>
                            <div class="bento-dot"></div>
                        </span>
                        </span>
                        <span style="display:inline-block;margin-left: 33px;    margin-top: -3px;" class="align-items-center lis-item-link"> Dashboard</span>
                    </span>
                </li>            
                <li class="nav-item">
                    <span class="navbar-toggler-icon list-item dmsi"  >
                        <i class="bi bi-file-earmark-text"></i>  <a class="lis-item-link" asp-controller="Category" asp-action="Index" >Category</a> 
                    </span>
                </li><li class="nav-item">
                    <span class="navbar-toggler-icon list-item dmsi">
                        <i class="bi bi-file-earmark-text"></i> <a class="lis-item-link" asp-controller="Company" asp-action="Index" >Company</a>
                    </span>
                </li>            
                <li class="nav-item">
                    <span class="navbar-toggler-icon list-item dmsi" >
                        <i class="bi bi-file-text"></i> <a class="lis-item-link" asp-controller="Product" asp-action="Index" >Product</a>
                    </span>
                </li> 
                <li class="nav-item">
                    <span class="navbar-toggler-icon list-item dmsi" >
                        <i class="bi bi-file-text"></i> <a class="lis-item-link" asp-controller="Vendor" asp-action="Index" >Vendor</a>
                    </span>
                </li>
                <li class="nav-item">
                    <span class="navbar-toggler-icon list-item dmsi" >
                        <i class="bi bi-file-text"></i> <a class="lis-item-link" asp-controller="Client" asp-action="Index" >Clients</a>
                    </span>
                </li> 
                <li class="nav-item">
                    <span class="navbar-toggler-icon list-item dmsi" >
                        <i class="bi bi-file-text"></i> <a class="lis-item-link" asp-controller="SalesMemo" asp-action="Index" >Sales</a>
                    </span>
                </li>
            </ul>
        </div>
    
        <div class="container containerHC" id="containerH">
       
            <main role="main" class="pb-3 main-content">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted" id="footerH">
            <div class="container">
                <span id="footerText">&copy; 2023 - Dairy Management System - </span<a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
        

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/js/script.js" asp-append-version="true"></script>
         <partial name="_ValidationScriptsPartial"></partial>
       

        <script src="https://cdn.jsdelivr.net/npm/toastr@2.1.4/build/toastr.min.js"></script>
     
          <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.9.1/dist/umd/popper.min.js"></script>
          <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
               <script src="https://cdnjs.cloudflare.com/ajax/libs/FileSaver.js/2.0.5/FileSaver.min.js"></script>
       <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/js-cookie/3.0.1/js.cookie.min.js"></script>

        

        <script src="~/js/site.js" asp-append-version="true"></script>
       
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>